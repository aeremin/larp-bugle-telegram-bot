{
  "name": "larp-bugle-telegram-bot",
  "version": "1.0.0",
  "main": "main.js",
  "author": "Alexey Eremin <a.eremin.msu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "deps": "yarn install",
    "build": "tsc",
    "test:dev": "mocha",
    "test:watch": "mocha --watch",
    "test": "nyc mocha --forbid-only",
    "posttest": "nyc report --reporter=json > coverage/coverage.json",
    "start": "npm run build && forever start ./main.js",
    "stop": "forever stop ./main.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "coverage/",
      "**/*.spec.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@google-cloud/datastore": "6.5.0",
    "@types/chai": "^4.2.7",
    "@types/dotenv": "^8.2.0",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.1",
    "@types/node-telegram-bot-api": "^0.40.1",
    "@types/request-promise": "^4.1.45",
    "@types/sinon": "^7.5.1",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.21",
    "mocha": "^6.2.2",
    "node-telegram-bot-api": "^0.40.0",
    "nyc": "^15.0.0",
    "request-promise": "^4.2.5",
    "sinon": "^8.0.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.5.4",
    "tslint-consistent-codestyle": "^1.16.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/eslint-plugin-tslint": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsdoc": "^36.0.8",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.1",
    "forever": "^1.0.0",
    "prettier": "^2.3.2",
    "tslint": "^6.1.3",
    "typescript": "4.4.2"
  }
}
