{
  "name": "larp-bugle-telegram-bot",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Alexey Eremin <a.eremin.msu@gmail.com>",
  "license": "MIT",
  "scripts": {
    "deps": "yarn install",
    "build": "tsc",
    "test:dev": "mocha",
    "test:watch": "mocha --watch",
    "test": "nyc mocha --forbid-only",
    "posttest": "nyc report --reporter=json > coverage/coverage.json",
    "start": "npm run build && forever start ./main.js",
    "stop": "forever stop ./main.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "coverage/",
      "**/*.spec.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "json",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@google-cloud/datastore": "2.0.0",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/google-cloud__datastore": "^1.3.3",
    "@types/lodash": "^4.14.121",
    "@types/mocha": "^5.2.6",
    "@types/node-telegram-bot-api": "^0.30.4",
    "@types/request-promise": "^4.1.42",
    "@types/sinon": "^7.0.8",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "lodash": "^4.17.11",
    "mocha": "^6.0.2",
    "node-telegram-bot-api": "^0.30.0",
    "nyc": "^13.3.0",
    "request-promise": "^4.2.4",
    "sinon": "^7.2.5",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2"
  },
  "devDependencies": {
    "forever": "^0.15.3",
    "typescript": "3.3.3"
  }
}
