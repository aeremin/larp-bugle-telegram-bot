  "license": "MIT",
  "scripts": {
    "deps": "yarn install",
    "build": "tsc",
    "test:dev": "mocha -r ts-node/register **/*.spec.ts --watch-extensions ts",
    "test": "mocha -r ts-node/register **/*.spec.ts --watch-extensions ts --forbid-only",
    "test:watch": "mocha -r ts-node/register **/*.spec.ts --watch-extensions ts --forbid-only --watch",
    "start": "npm run build && forever start ./main.js",
    "stop": "forever stop ./main.js"
  },
  "dependencies": {
    "@google-cloud/datastore": "2.0.0",
    "@types/chai": "^4.1.7",
    "@types/dotenv": "^6.1.0",
    "@types/google-cloud__datastore": "^1.3.3",
    "@types/mocha": "^5.2.6",
    "@types/node-telegram-bot-api": "^0.30.4",
    "chai": "^4.2.0",
    "dotenv": "^6.2.0",
    "mocha": "^6.0.2",
    "node-telegram-bot-api": "^0.30.0",
    "ts-node": "^8.0.2"
  },
  "devDependencies": {
    "forever": "^0.15.3",
    "typescript": "3.3.3"
  }
}
